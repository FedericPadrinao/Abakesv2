                        <h2>Account Information</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Banner -->



 
 <div class="centered-card-container">
    <div class="centered-card">
        <div class="card text-center custom-card">
            <div class="card-header h5 text-white" style="background-color: #FCBCB4;">Customer Info</div>
            <div class="card-body px-4">
                <form method="post">
                    <div class="form-group">
                        <label for="accName">Username</label>
                        <input type="text" id="username" name="username" class="form-control" required value="@Model.customerInfo.username">
                    </div>
                    <div class="form-group">
                        <label for="accPhone">Phone</label>
                        <input type="text" id="phone" name="phone" class="form-control" required value="@Model.customerInfo.phone">
                    </div>
                    <div class="form-group">
                        <label for="accPassword">Email</label>
                        <input type="text" id="email" name="email" class="form-control" required value="@Model.customerInfo.email">
                    </div>
            
               
                    <div class="form-group">
                        <label for="currentAddress">Address</label>
                        <input type="text" id="address" name="address" class="form-control" required value="@Model.customerInfo.address">
                    </div>
                    <div class="form-group">
                        <label for="addressCity">City</label>
                        <input type="text" id="city" name="city" class="form-control" required value="@Model.customerInfo.city">
                    </div>
                    <div class="form-group">
                        <label for="addressBarangay">Barangay</label>
                        <input type="text" id="barangay" name="barangay" class="form-control" required value="@Model.customerInfo.barangay">
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>


