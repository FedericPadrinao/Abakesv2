                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit" id="button-addon2">Apply</button>
                                </div>
                                 </form>
                                 
                                
                               
                            </div>
                            
                        </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-5">
                    <div class="col-md-12">
                        <h2 class="h3 mb-3 text-black">Your Order</h2>
                        <div class="p-3 p-lg-5 border">
                            <table class="table site-block-order-table mb-5">
                                <thead>
                                    <tr>
                                        <th class="text-black">Product</th>
                                        <th class="text-black">Total</th>
                                    </tr>
                                </thead>
                            
                        
                                <tbody>
                                    @foreach (var item in Model.listOrderSimple)
                                    {
                                        <tr>
                                            <td>
                                              <strong>Occassion:</strong>  @item.osOccasion<br>
                                                <strong>Flavor: </strong>  @item.osFlavors<br>
                                                <strong>Shapes: </strong> @item.osShapes <br> 
                                               <strong>Tier: </strong>   @item.osTier<br>
                                                <strong>Color: </strong>  @item.osColor<br>
                                                <strong>Dedication: </strong>  @item.osDedication <br>
                                                <strong>Mode of Delivery: </strong>  @item.osDelivery <br> 

                                            </td>
                                            <td><strong> PHP @item.osPrice</strong></td>
                                        </tr>
                                    }
                                    <tr>
                                        <td class="text-black font-weight-bold"><strong>Product Price</strong></td>
                                        <td class="text-black font-weight-bold"><strong>PHP @Model.TotalCart</strong></td>
                                    </tr>
                                    <tr>
                                        <td class="text-black font-weight-bold"><strong>50% Downpayment</strong></td>
                                        <td class="text-black"> <strong>PHP @Model.TotalDP</strong> </td>
                                    </tr>
                                    
                                    <tr>
                                        <td class="text-black font-weight-bold"><strong>Shipping Fee</strong></td>
                                        <td class="text-black"> <strong>PHP @Model.ShippingPrice</strong></td>
                                    </tr>
                                   
                                        
                                        @if (Model.os.netOrderPrice == 0)
                                    {
                                         <tr>
                                        <td class="text-black font-weight-bold"><strong>Full Payment</strong><small>(Product Price + Shipping Fee)</small></td>
                                        <td class="text-black font-weight-bold"><strong>PHP @Model.TotalCost</strong></td>
                                         </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                         <td class="text-black font-weight-bold"><strong>Discounted Product Price</strong></td>
                                        <td class="text-black font-weight-bold"><strong>PHP @Model.os.netOrderPrice</strong></td>
                                        </tr>
                                        <tr>
                                         <td class="text-black font-weight-bold"><strong>Net Price</strong><small>(Discounted Product Price + Shipping + Downpayment)</small></td>
                                        <td class="text-black font-weight-bold"><strong>PHP @Model.TotalNetCost</strong></td>
                                        </tr>
                                        
                                    }
                              
                                    
                                </tbody>
                            
                            
                            </table>
                                 <!-- Place Order Button -->
                            <div class="form-group">
                           
                            <form method="post" enctype="multipart/form-data" >
