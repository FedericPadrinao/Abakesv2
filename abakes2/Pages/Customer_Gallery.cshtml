                        <!--PRODUCT CARD-->


                        <!-- PAGINATION BUTTONS-->
                        <div style="align-content: center; color:rgb(159, 167, 189); font-family:Poppins ExtraBold;"">
                        @{
                            double pages = (Model.totalItems / Model.totals);
                            if (pages % 1 == 0)
                            {

                            }
                            else
                            {
                                pages += 1;
                            }
                            int totalPage = (int)pages;
                            int counts = 0;


                            int counter = 1;
                            double totales = (totalPage - Model.pagecurrent);



                        }

                        @if ((Model.pagecurrent) == 1) { }else{
                                <a href="/Customer_Gallery?page=@(Model.pagecurrent-1)" style="color:rgb(159, 167, 189); font-family:Poppins ExtraBold;">Previous</a>
                        }

                        @while(counts <= totales){
                            @if(counter <=5){
                                    <a href="/Customer_Gallery?page=@Model.pagecurrent" style="color:rgb(159, 167, 189); font-family:Poppins ExtraBold;"> @Model.pagecurrent</a>
                            }else{

                            }

                            counts++;
                            Model.pagecurrent++;
                            counter++;
                        }

                        @if((Model.pagecurrent) == totales){}else{

                            @if (Model.pagecurrent == 1)
                            {
                                    <a href="/Customer_Gallery?page=@Model.pagecurrent" style="color:rgb(159, 167, 189); font-family:Poppins ExtraBold;">Last</a>
                            }else{
                                <a href="/Customer_Gallery?page=@(Model.pagecurrent-1)" style="color:rgb(159, 167, 189); font-family:Poppins ExtraBold;">Last</a>
                            }

                        }
                        </div>

                         <!-- PAGINATION BUTTONS-->

                       
