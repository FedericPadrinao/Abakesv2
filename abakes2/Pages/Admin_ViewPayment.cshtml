            <!-- First Account Page -->
            <div class="container" >
                <div class="adminbox">
                    <form id="NotifPreview" method="post">
                        <h2>Cake Details</h2>

                        <input type="hidden" name="id" value="@Model.invoiceInfo.invoiceID" />
                        <div class="p-5 p-lg-5 border">
                            <div class="form-group row">
                               
                            </div>

                            <div class="p-5 p-lg-5 border">     
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <label for="c_hadd" class="text-black"><b>Occasion:</b>  </label>
                                        <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceOccasion</label>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Shapes:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceShapes</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Color:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceColor</label>
                                        </div>
                                    </div>
                                    <div clas
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Tier:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceTier</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Flavors:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceFlavors</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Sizes:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceSizes</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Instruction:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceInstruction</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Dedication:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceDedication</label>
                                        </div>
                                    </div> 
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Delivery:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceDelivery</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Expected Delivery:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceExpectedD @Model.invoiceInfo.invoiceExpectedT</label>
                                        </div>
                                    </div>
                                    <h2>Invoice Details</h2>
                                     <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Date Created:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceDateCreated</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Product Price:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoicePrice</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Downpayment:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceDP</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Shipping:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.invoiceShip</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Order Status:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.orderStatus</label>
                                        </div>
                                    </div>
                                     <div class="form-group row">
                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>Payment Method:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.invoiceInfo.paymentMethod</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="dropdown">
                        <label for="status"><h3>Order Status:</h3></label>
                        <select name="orderstatus" id="status" required >
                            <option value="50% Downpayment">50% Downpayment</option>
                            <option value="Baking">Baking</option>
                            <option value="Order Confirmation">Order Confirmation</option>
                            <option value="Full Payment">Full Payment</option>
                            <option value="Delivery/Pickup">Delivery/Pickup</option>
                            <option value="Order Arrived">Order Arrived</option>
                            <option value="Complete Order">Complete Order</option>
                        </select>
                         </div>
                        



                          <div class="buton3d">
                        <button type="submit" class="btn" style="margin:1%;">Submit</button>
                        </div>
                    </form>
