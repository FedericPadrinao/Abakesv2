                                        <div class="col-md-12">
                                            <label for="c_hadd" class="text-black"><b>City:</b>  </label>
                                            <label for="c_hadd" class="text-black">@Model.customerInfo.city</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
