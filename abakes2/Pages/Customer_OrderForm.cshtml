    <!-- Message -->
    <div class="account-page">
        <div class="container">
            <div class="row">
                <div class="tnc" style="height: 950px; ">
                <form method="post" id="order-form" style="text-align:left; margin:20px 25px; " asp-page-handler="OnPost">

                    <!--Occasion-->
                    <label for="occasion"><h3>Occasion‌: ‌ ‌ </h3></label>
                    <select name="occasion" id="occasion" required>
                        <option value="Birthday">Birthday Party</option>
                        <option value="Wedding">Wedding</option>
                        <option value="Debut">Debut</option>
                        <option value="Graduation">Graduation</option>
                        <option value="Otherocc">Others</option>
                    </select>
                    <!--Colors-->
                     <label for="color"><h3>Base Color: ‌ ‌ </h3></label>
                        <select name="color" id="color" required>
                            <option value="Red">Red</option>
                            <option value="Green">Green</option>
                            <option value="Blue">Blue</option>
                            <option value="Yellow">Yellow</option>
                            <option value="Purple">Purple</option>
                            <option value="Orange">Orange</option>
                            <option value="Pink">Pink</option>
                            <option value="Brown">Brown</option>
                            <option value="Gray">Gray</option>
                            <option value="Black">Black</option>
                        </select>
                    <!--Shapes-->
                    <h3>Shapes:</h3>
                    <label class="form-check-label" for="round">‌‌ ‌ ‌ Round</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="round" name="shapes" />
                    <label class="form-check-label" for="square">Square</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="square" name="shapes" />
                    <label class="form-check-label" for="heart">Heart</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="heart" name="shapes" />
                    <label class="form-check-label" for="othershape">Others</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="othershape" name="shapes" />
                    <br />
                    <!--Tier-->
                    <h3>Tier:</h3>
                    <label class="form-check-label" for="tier1">‌‌ ‌ ‌ 1 Tier</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="tier1" name="tier" />
                    <label class="form-check-label" for="tier2">2 Tiers</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="tier2" name="tier" />
                    <label class="form-check-label" for="tier3">3 Tiers</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="tier3" name="tier" />
                    <label class="form-check-label" for="othertier">Others</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="othertier" name="tier" />
                    <br /><br />
                    <!--Flavor-->
                    <label for="flavors"><h3>Cake Flavors‌: ‌ ‌ </h3></label>
                    <select name="flavors" id="flavors">
                        <option value="matcha">Matcha</option>
                        <option value="strawberry">Strawberry</option>
                        <option value="vanilla">Vanilla</option>
                        <option value="chocolate">Chocolate</option>
                        <option value="otherflavor">Others</option>
                    </select>
                    <br /><br />
                    <!--Size-->
                    <label for="sizes"><h3>Cake Size‌‌: ‌ ‌ ‌‌ ‌ ‌ ‌‌ </h3></label>
                    <select name="sizes" id="cakesize">
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">Large</option>
                        <option value="othersize">Others</option>
                    </select>
                    <br /><br />
                    <!--Delivery Type-->
                    <h3>Delivery Type:</h3>
                    <label class="form-check-label" for="standdelivery">‌‌ ‌ ‌ Standard Delivery</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="Delivery" name="delivery" />
                    <label class="form-check-label" for="pickup">Pick up</label>
                    <input class="form-check-input" style="height:21px" type="radio" value="Pickup" name="delivery" />
                    <label class="form-check-label" for="pickup">Preferred Delivery/Pickup</label>
                    <input style="height:21px" type="date" name="preferred" />
                    <!--Dedication-->
                    <h3>Dedication:</h3> 
                    <input type="text" name="dedication" />
                    <!--Special Instructions-->
                    <h3>Special Instructions:</h3>
                    <textarea name="special_instructions" id="specinst" ></textarea>
                    <div style="padding:30px 20px; margin:2px;">
                        <button type="submit" class="btn" >Confirm</button>
                    </div>
                </form>
                </div>
            </div>
        </div>
