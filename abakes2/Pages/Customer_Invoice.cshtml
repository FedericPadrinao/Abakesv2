@page
@model abakes2.Pages.Customer_InvoiceModel
@{
}

<html>
	<head>
		<meta charset="utf-8" />
		<title>A's Bakes Invoice</title>

		<style>
			.invoice-box {
				max-width: 800px;
				margin: auto;
				padding: 30px;
				border: 1px solid #eee;
				box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
				font-size: 16px;
				line-height: 24px;
				font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
				color: #555;
			}

			.invoice-box table {
				width: 100%;
				line-height: inherit;
				text-align: left;
			}

			.invoice-box table td {
				padding: 5px;
				vertical-align: top;
			}

			.invoice-box table tr td:nth-child(2) {
				text-align: right;
			}

			.invoice-box table tr.top table td {
				padding-bottom: 20px;
			}

			.invoice-box table tr.top table td.title {
				font-size: 45px;
				line-height: 45px;
				color: #333;
			}

			.invoice-box table tr.information table td {
				padding-bottom: 40px;
			}

			.invoice-box table tr.heading td {
				background: #eee;
				border-bottom: 1px solid #ddd;
				font-weight: bold;
			}

			.invoice-box table tr.details td {
				padding-bottom: 20px;
			}

			.invoice-box table tr.item td {
				border-bottom: 1px solid #eee;
			}

			.invoice-box table tr.item.last td {
				border-bottom: none;
			}

			.invoice-box table tr.total td:nth-child(2) {
				border-top: 2px solid #eee;
				font-weight: bold;
			}
			.buttons-container{
				margin-left:120px;
			}
			
		@@media print {
			.buttons-container {
				display: none;
			}
		}
			@@media only screen and (max-width: 600px) {
				.invoice-box table tr.top table td {
					width: 100%;
					display: block;
					text-align: center;
				}

				.invoice-box table tr.information table td {
					width: 100%;
					display: block;
					text-align: center;
				}
			}

			/** RTL **/
			.invoice-box.rtl {
				direction: rtl;
				font-family: Tahoma, 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
			}

			.invoice-box.rtl table {
				text-align: right;
			}

			.invoice-box.rtl table tr td:nth-child(2) {
				text-align: left;
			}


		</style>
	</head>

	<body>
		<div class="invoice-box">
			<table cellpadding="0" cellspacing="0">
				<tr class="top">
					<td colspan="2">
						<table>
							<tr>
								<td class="title">
									<img src="~/img/logo/Logo.png"
										style="width: 200%; max-width: 120px; height:120px;"
									/>
								</td>

								<td>
									Invoice #: @Model.invoiceInfo.invoiceID<br />
								Created: @Model.FormattedDateTime<br />
								
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr class="information">
					<td colspan="3">
						<table>
							<tr>
								<td>
								1410 Cristobal St<br />
								Sampaloc,
								Metro Manila<br />
								
								</td>

								<td>
								abakes881@gmail.com<br />
								Customer: @Model.customerInfo.fname @Model.customerInfo.lname
								</td>
							</tr>
							
						</table>
						
					</td>
				</tr>

				<tr class="heading">
					<td>Payment Method</td>

					<td></td>
				</tr>

				<tr class="details">
					<td>@Model.invoiceInfo.paymentMethod</td>

					<td></td>
				</tr>

				<tr class="heading">
					<td>Cake</td>

					<td>Product Price</td>
				</tr>

				<tr class="item">
					<td>@Model.invoiceInfo.invoiceOccasion<br />@Model.invoiceInfo.invoiceTier<br />@Model.invoiceInfo.invoiceFlavors</td>

					<td>PHP @Model.invoiceInfo.invoicePrice</td>
				</tr>
								<tr class="heading">
					<td>Breakdown</td>

					<td>Total Price</td>
				</tr>

				<tr class="item">
					<td>Downpayment</td>

					<td>PHP @Model.invoiceInfo.invoiceDP</td>
				</tr>

				<tr class="item">
					<td>Shipping</td>

					<td>PHP @Model.invoiceInfo.invoiceShip</td>
				</tr>

				@if(Model.invoiceInfo.NetInvoicePrice == 0){
					<tr class="total">
					<td></td>

					<td>PHP @Model.TotalCost</td>
				</tr>
			}
			else
			{
				<tr class="item">
					<td>Discounted Product Price</td>

					<td>PHP @Model.invoiceInfo.NetInvoicePrice</td>
				</tr>
				<tr class="total">
					<td>Net Price</td>

					<td>PHP @Model.TotalNetCost</td>
			</tr>
			}
			
			</table>
		</div>
				<div class="buttons-container">

		<a class='btn btn-secondary' href="/Customer_CompleteOrders">Go Back</a>
		
		
		
		<button class='btn btn-success' onclick="printPage()"> Print </button>
	</div>
	</body>

</html>


<script>
	function printPage() {
		window.print();
	}
</script>
